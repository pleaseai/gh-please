{
  "name": "@pleaseai/gh-please",
  "type": "module",
  "version": "0.26.0",
  "workspaces": [
    "plugins/*"
  ],
  "description": "GitHub CLI extension for enhanced PR and issue management with plugin support",
  "author": "PleaseAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pleaseai/gh-please.git"
  },
  "keywords": [
    "pleaseai",
    "gh-extension",
    "github",
    "cli",
    "code-review",
    "ai",
    "automation",
    "pull-request",
    "issue-management",
    "triage"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/plugin-interface.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gh-please": "./dist/index.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun build src/lib/index.ts --outdir dist/lib --target bun --format esm && bun build src/types/index.ts --outdir dist/types --target bun --format esm",
    "build:types": "tsc --project tsconfig.build.json",
    "build:prod": "bun build --compile --minify --sourcemap --bytecode src/index.ts --outfile dist/gh-please",
    "prepublishOnly": "bun run build && bun run build:types",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "bun test",
    "test:unit": "bun test test/lib test/commands",
    "test:integration": "bun test test/integration",
    "test:e2e": "bun test test/e2e",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test test/lib test/commands --coverage",
    "test:coverage:text": "bun test --coverage",
    "test:all": "bun run test:unit && bun run test:integration",
    "test:manual": "./scripts/manual-test.sh",
    "update-fields": "bun run scripts/update-gh-fields.ts"
  },
  "dependencies": {
    "@byjohann/toon": "^0.4.1",
    "@clack/prompts": "^0.11.0",
    "@jmespath-community/jmespath": "^1.3.0",
    "@pleaseai/cli-toolkit": "^0.2.0",
    "commander": "^12.1.0",
    "es-toolkit": "^1.41.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2",
    "ts-pattern": "^5.9.0",
    "typescript": "^5.7.2"
  }
}
