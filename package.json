{
  "name": "@pleaseai/gh-extension",
  "version": "0.2.0",
  "description": "GitHub CLI extension for replying to PR review comments",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gh-please": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "gh-extension",
    "github",
    "cli",
    "pull-request",
    "review"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^12.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "@antfu/eslint-config": "^6.0.0",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2"
  }
}